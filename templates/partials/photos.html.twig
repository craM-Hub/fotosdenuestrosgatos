{% extends 'base.html.twig' %}
{% block title %}Fotos de nuestros gatos{% endblock %}
{% block body %}
{{ include ('partials/navbar.html.twig')  }}
    <!-- LISTA DE FOTOS -->
    {% if photos %}
    <!-- Fondo 2-->
        <div class="fondo-2" id="photos">
            <div class="gradient-top"></div>
            <div class="fondo-texto-container">
                <p class="fondo-texto">Fotos</p>
            </div>
            <div class="gradient"></div>
        </div>
            <div class="w3-content w3-container w3-padding-64" id="portfolio">
            <h3 class="w3-center">Fotos</h3>
            <p class="w3-center">
                <em>Aquí tenemos algunos de los lorem ipsum tipsum.<br /> </em>
            </p>
            <br />
             <!-- CONTENEDOR FOTOS -->
            <div class="infiniteContainer grid">
                {% for photo in photos %}
                <div class="infinite grid-item">
                    <img
                        src="../assets/photos/{{ photo.getFileName }}"
                        style="width: 100%"
                        onclick="imgExpand(this)"
                        class="w3-hover-opacity"
                        alt="{{ photo.getDescription }}"
                    />
                </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
