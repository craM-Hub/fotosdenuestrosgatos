        <!-- Fondo 2-->
        <div class="fondo-2" id="photos">
            <div class="gradient-top"></div>
            <div class="fondo-texto-container">
                <p class="fondo-texto">Fotos</p>
            </div>
            <div class="gradient"></div>
        </div>

        <!-- Container (Photos) -->
        <div class="w3-content w3-container w3-padding-64" id="portfolio">
            <h3 class="w3-center">Fotos</h3>
            <p class="w3-center">
                <em>Aquí tenemos algunos de los lorem ipsum tipsum.<br /> </em>
            </p>
            <br />

            <!-- LISTA DE FOTOS -->
            {% if photos %}
                {{ include ('photolist.html.twig', {
                    'photos': photos,
                    'maxPages': maxPages,
                    'currentPage': currentPage,
                    'thispage': thisPage })
                }}
            {% endif %}
        </div>
        <!-- Modelo W3 imágenes a tamaño grande -->
        <div
            id="modal01"
            class="w3-modal w3-black"
            onclick="this.style.display='none'"
        >
            <span
                class="w3-button w3-large w3-black w3-display-topright"
                title="Close Modal Image"
                ><em class="fa fa-remove"></em
            ></span>
            <div
                class="
                    w3-modal-content
                    w3-animate-zoom
                    w3-center
                    w3-transparent
                    w3-padding-64
                "
            >
                <img id="img01" class="w3-image" alt="cat-image-large" />
                <p id="caption" class="w3-opacity w3-large"></p>
            </div>
        </div>
        <!-- Fondo 3-->
        <div class="fondo-3">
            <div class="gradient-top"></div>
            <div class="fondo-texto-container">
                <p class="fondo-texto">Contacto</p>
            </div>
            <div class="gradient"></div>
        </div>
        <!-- Container (Contact) -->
        <div class="w3-content w3-container w3-padding-64" id="contact">
            <div class="w3-row w3-padding-32 w3-section">
                <div class="w3-col m8 w3-panel">
                    <div class="w3-large w3-margin-bottom">
                        <em
                            class="
                                fa fa-map-marker fa-fw
                                w3-hover-text-black w3-xlarge w3-margin-right
                            "
                        ></em>
                        Parque Científico Tecnológico y Empresarial de la
                        Universidad, Jaume I, 12071 Castellón de la Plana,
                        Castellón<br />
                        <em
                            class="
                                fa fa-phone fa-fw
                                w3-hover-text-black w3-xlarge w3-margin-right
                            "
                        ></em>
                        Teléfono: +666 666 666<br />
                        <em
                            class="
                                fa fa-envelope fa-fw
                                w3-hover-text-black w3-xlarge w3-margin-right
                            "
                        ></em>
                        Email: fotosdenuestrosgatos@fotosdenuestrosgatos.com<br />
                    </div>
                    <p>Déjanos una nota:</p>
                    <form action="#" target="_blank">
                        <div
                            class="w3-row-padding"
                            style="margin: 0 -16px 8px -16px"
                        >
                            <div class="w3-half">
                                <label for="name" style="display: none;">Nombre</label>
                                <input
                                    id="name"
                                    class="w3-input w3-border"
                                    type="text"
                                    placeholder="Nombre"
                                    required
                                    name="Name"
                                />
                            </div>
                            <div class="w3-half">
                                <label for="email" style="display: none;">Nombre</label>
                                <input
                                    id="email"
                                    class="w3-input w3-border"
                                    type="text"
                                    placeholder="Email"
                                    required
                                    name="Email"
                                />
                            </div>
                        </div>
                        <label for="message" style="display: none;">Nombre</label>
                        <input
                            id="message"
                            class="w3-input w3-border"
                            type="text"
                            placeholder="Mensaje"
                            required
                            name="Message"
                        />
                        <button
                            class="w3-button w3-black w3-right w3-section"
                            type="submit"
                        >
                            <em class="fa fa-paper-plane"></em> ENVIAR MENSAJE
                        </button>
                    </form>
                </div>
                <div class="w3-col m4 w3-container">
                    <img
                        src="./assets/contact.png"
                        class="w3-image w3-round"
                        style="width: 100%"
                        alt="imagen-contacto"
                    />
                </div>
            </div>
        </div>
        <!-- Footer -->
        <footer
            class="
                w3-center w3-black w3-padding-64 w3-opacity w3-hover-opacity-off
            "
        >
            <a href="#home" class="w3-button w3-light-grey"
                ><em class="fa fa-arrow-up w3-margin-right"></em>Ir arriba</a
            >
